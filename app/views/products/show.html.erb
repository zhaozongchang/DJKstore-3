<div class="col-md-10 col-md-offset-2 col-xs-12 product-show-box">
  <div class="container">
    <div class="col-md-6">
      <% if @product.image.present? %>
        <%= image_tag(@product.image.medium.url, class: "thumbnail wow tada", data: {wow_delay: "1.5"}) %>
      <% else %>
        <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
      <% end %>
    </div>

    <section class="col-md-4 product-main-box">
      <div class="title">
        <h1><%= @product.title %></h1>
      </div>
      <div class="price">
        <h3>￥ <%= @product.price %></h3>
      </div>
      <div> 数量 : <%= @product.quantity %> </div>
      <hr/>
      <!-- 产品规格：尺寸 / 重量 / 材质 / 产地 / 备注-->
      <div class="specification">
        <p>尺寸：直径117mm 高70mm</p>
        <p>重量：约 210g</p>
        <p>产地：日本</p>
        <p>
         热度：<%= @product.impressionist_count(:filter=>:session_hash) %>
       </p>
        <p>备注：<%= @product.description%></p>
      </div>
      <hr/>
      <!-- 收藏 / 社群分享 -->
      <div class="row">
        <!-- 收藏 -->
        <div class="favorite">
          <a href="#"><i class="fa fa-plus"></i>加入收藏</a>
        </div>

        <!-- 社群分享 -->
        <div class="share">
          <a href="#"><i class="fa fa-twitter"></i></a>
          <a href="#"><i class="fa fa-facebook"></i></a>
          <a href="#"><i class="fa fa-google"></i></a>
          <a href="#"><i class="fa fa-pinterest"></i></a>
          <a href="#"><i class="fa fa-wechat"></i></a>
        </div>
      </div>
      <!-- 购买按钮 -->
      <div class="purchase">
          <% if @product.quantity > 0 %>
          <%= link_to("加入购物车", add_to_cart_product_path(@product), method: :post, class:"btn btn-lg btn-default") %>
          <% else %>
          已销售一空，无法购买
          <% end %>
      </div>

      <!-- 推荐商品 * 3 -->
      <div class="recommend">

        <hr class="recommend-title">

        <div class="col-xs-12 col-sm-4 col-md-4">
          <%= link_to '#' do %>
            <%= image_tag("item_10.jpg") %>
          <% end %>
        </div>
        <div class="col-xs-12 col-sm-4 col-md-4">
          <%= link_to '#' do %>
            <%= image_tag("item_11.jpg") %>
          <% end %>
        </div>
        <div class="col-xs-12 col-sm-4 col-md-4">
          <%= link_to '#' do %>
            <%= image_tag("item_12.jpg") %>
          <% end %>
        </div>
      </div>
    </section>
  </div>
</div>
